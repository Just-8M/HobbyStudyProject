	<!-- 首页推荐讲师 -->
	<select id="getRecommendTeacher"  parameterType="com.hobbyStudy.entity.User" resultMap="BaseResultMap">
		SELECT 
		<include refid="Base_Column_List" />
		FROM  hs_user
		ORDER BY weight DESC 
